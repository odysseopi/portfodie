//base styles
@import url("http://fonts.googleapis.com/css?family=Source+Sans+Pro:200")
body
	font-family 'Source Sans Pro', sans-serif
a
	text-decoration none
	color black
	pointer-events initial
	&:hover
		color gray
ul
	display inline-block
	position relative
	margin 0 auto
	padding 0
	margin 0 auto
	height 100%
	list-style none

section
	text-align left
	p
		max-width 600px
	img
		width 39%
		border none
		outline none
		cursor pointer
//layout
//index/categories
.description
	max-width 940px
	padding 7%
	.read-more
		margin-left	2.3em
.full
	width 100%
	max-width 900px
.visible
	width 100%
	padding-bottom 0.9em
	p
		font-weight	500
		text-align start
//index
.in_full
	max-width	940px
	padding 7%
	padding-bottom 0

.in_visible
	max-width 940px
	padding 4%
	padding-top 0
	.left
		padding-top 1.1em
		text-align left
		font-size 1.4em
footer
	position relative
	overflow hidden
	bottom 0
	width 100%
	height 65%
	padding-bottom 0.3em
	border-top 2px solid
	border-color rgba(120, 158, 176, 0.9)
	color gray
	font-size 0.9em
	font-weight lighter
	text-align center
	.white
		color white
	br
		display none
	p
		display inline-block
		width 50%
		padding-top 1em
		&:first-child
			float left
		&:last-child
			float right
		img
			width 1.4em